    <span class="oi oi-pencil mr-2" aria-hidden="true"></span>
    @if (Someshit != null)
    {
        <strong>@Someshit.Name</strong>
        <br />

        @if (Someshit.HomePage != null)
        {
            <a href="@Someshit.HomePage"><button> @Someshit.Name Web Page</button></a>
        }
