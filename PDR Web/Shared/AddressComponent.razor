<h3>AddressComponent</h3>
@using PDR_Jobs
@using System

    <div class="alert alert-secondary mt-4" role="alert">

        <span class="oi oi-pencil mr-2" aria-hidden="true"></span>
        @if (TheAddress != null)
    {
        <strong>@TheAddress.Address</strong>
        <br />
    }

    </div>
    @code {

    [Parameter]
    public Address TheAddress
    {
        get; set;
    }

    }

}
